#include<stdio.h>
int main(){
    int a[10],i,j,first,last,mid,n,search;
    printf("enter the range of array=");
    scanf("%d",&n);
    for(i=0;i<n;i++){
        printf("enter the elements=\n");
        scanf("%d",&a[i]);
    }
//sorting
    for(i=0;i<n-1;i++){
        for(j=0;j<n-i-1;j++){
            if (a[j]>a[j+1]){
               int temp=a[j];
                a[j]=a[j+1];
                a[j+1]=temp;
            }
        }
    }
    printf("sorted array=\n");
    for(i=0;i<n;i++){
        printf("%d ,",a[i]);
    }
    printf("\nenter the element to be searched=");
    scanf("%d",&search);
    //binary search
    first=0;
    last=n-1;
    while (first<=last){
        mid=(first+last)/2;
        if(a[mid]<search){
            first=mid+1;
        }
        else if(a[mid]==search){
            printf("%d found at position=%d",search,mid);
            break;
        }
        else{            //a[mid]>search
            last=mid-1;
            mid=(first+last)/2;
        }
    }
    mid=(first+last)/2;
    if(first>last){
        printf("element not found");
    }
return 0;
}
