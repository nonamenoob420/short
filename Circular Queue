//circular queue
#include<stdio.h>
#include<stdlib.h>
#define max 4
int queue[max],front=-1,rear=-1;
void enqueue(){
    int item;
    printf("enter value to be inserted=");
    scanf("%d",&item);
    if((rear+1)%max==front){
         printf("overflow...\n");
         return;
    }
    else if (front==-1 && rear==-1){
        rear=0;
        front=0;
    }
    else{
        rear=(rear+1)%max;
    }
    queue[rear]=item;
    printf("item is inserted..\n");
}
void dequeue(){
    int item;
    if (front==-1 ){
         printf("underflow....\n");
         return;
    }
    else {
        item=queue[front];
        if (front==rear){
            front=-1;
            rear=-1;
        }
        else{
            front=(front+1)%max;
        }
        printf("Value deleted..\n");
    }
}
void display(){
    int i=front;
    if (rear==-1){
        printf("empty queue\n");
    }
    else{
        printf("the queue is..\n");
        while (1){
            printf("%d\n",queue[i]);
            if (i==rear){
                break;
            }
            i=(i+1)%max;
        }
    }
}
int peek(){
    if (rear==-1){
        return printf("empty queue");
    }
    else{
        return queue[front];
    }
}
int main(){
    int choice;
    while (1){
    printf("1.enqueue\n2.dequeue\n3.display\n4.peek\n5.exit\n");
    printf("enter your choice=");
    scanf("%d",&choice);
        switch(choice){
            case 1:
            enqueue();
            break;
            case 2:
            dequeue();
            break;
            case 3:
            display();
            break;
            case 4:
            printf("\npeek value is=%d\n",peek());
            break;
            case 5:
            exit(0);
            break;
            default:
            printf("enter valid input......");
        }
    }
}
